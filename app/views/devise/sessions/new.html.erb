<h1>Login to Your Account</h1><br>

<%= form_for(resource, as: resource_name, url: session_path(resource_name))  do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.text_field :email, autofocus: true, autocomplete: "email", placeholder: "emai" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions login">
    <%= f.submit "Log in", class: "book-btn" %>
  </div>
<% end %>
<div class="login-help">
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Register", new_registration_path(resource_name) %>  -
  <% end %>

  <a href="#">Forgot Password</a>
</div>
